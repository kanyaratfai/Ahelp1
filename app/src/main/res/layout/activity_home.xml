<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pareeya.ahelp.HomeActivity"
    android:background="@drawable/bghome">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/button15"

        android:layout_centerHorizontal="true"

        android:layout_alignParentBottom="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="98dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/h1"
            android:textStyle="bold" />

        <Button
            android:layout_width="290dp"
            android:layout_height="260dp"
            android:id="@+id/button16"
            android:background="@drawable/butalarm1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/button10"
                android:background="@drawable/but1669"
                android:layout_weight="1.32"
                android:layout_width="120dp"
                android:layout_height="110dp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:id="@+id/button13"
                android:layout_weight="1.32"
                android:background="@drawable/butcall" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button15"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/butset"
        android:onClick="clickHomeGoSetting"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="60dp" />

</RelativeLayout>
